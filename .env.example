export SECUDIUM_PASSWORD=your-secudium-password

# === 🔴 수집 보안 설정 (방어적 차단 시스템) ===
# 모든 외부 수집 기능 강제 차단 (기본값: true)
export FORCE_DISABLE_COLLECTION=true

# 수집 기능 개별 제어 (FORCE_DISABLE_COLLECTION=false일 때만 유효)
export COLLECTION_ENABLED=false

# 재시작 보호 기능 (무한 재시작 방지)
export RESTART_PROTECTION=true

# 인증 시도 제한 (24시간 내 최대 시도 횟수)
export MAX_AUTH_ATTEMPTS=10

# 차단 해제 시간 (시간 단위)
export BLOCK_DURATION_HOURS=24

# === 보안 및 암호화 ===
export SECRET_KEY=your-super-secret-key-change-this
export JWT_SECRET_KEY=your-jwt-secret-key-change-this
export API_SECRET_KEY=your-api-secret-key-change-this

# === 데이터베이스 및 캐시 ===
export DATABASE_URL=sqlite:///instance/blacklist.db
export REDIS_URL=redis://localhost:6379/0

# === 애플리케이션 설정 ===
export PORT=8541
export HOST=0.0.0.0
export LOG_LEVEL=INFO
export ENVIRONMENT=production

# === Basic Auth Headers (for direct API calls) ===
