# Blacklist Management System - Environment Configuration
# Copy this file to .env and update with your values
# DO NOT commit .env file to git

# === Application Settings ===
PORT=2541
FLASK_ENV=production
DEBUG=false
HOST=0.0.0.0
LOG_LEVEL=INFO

# === Database ===
DATABASE_URL=sqlite:////app/instance/blacklist.db

# === Cache ===
REDIS_URL=redis://redis:6379/0

# === External API Credentials ===
REGTECH_USERNAME=your-regtech-username
REGTECH_PASSWORD=your-regtech-password
SECUDIUM_USERNAME=your-secudium-username
SECUDIUM_PASSWORD=your-secudium-password

# === Security Settings (기본값: 외부 인증 차단) ===
FORCE_DISABLE_COLLECTION=true
COLLECTION_ENABLED=false
RESTART_PROTECTION=true
MAX_AUTH_ATTEMPTS=10
BLOCK_DURATION_HOURS=24

# === Security Keys ===
SECRET_KEY=change-this-secret-key-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this

# === Performance ===
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
CACHE_TTL=300

# === Monitoring ===
ENABLE_METRICS=true
METRICS_PORT=9000