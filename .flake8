[flake8]
max-line-length = 88
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    *.pyc,
    *.egg-info,
    build,
    dist,
    .pytest_cache,
    htmlcov*,
    data,
    logs,
    instance
ignore = 
    E203,
    W503,
    E501,
    E402
per-file-ignores =
    __init__.py:F401
    test_*.py:F401,F811
statistics = True
count = True
show-source = True