  build-and-push:
    name: Build and Push Docker Image
    runs-on: self-hosted
    if: github.ref == 'refs/heads/main'
    outputs:
      image_tag: ${{ steps.meta.outputs.tags }}
      image_digest: ${{ steps.build.outputs.digest }}
    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Enable Docker Buildx
        run: |
          # ê¸°ì¡´ buildxê°€ ìžˆëŠ”ì§€ í™•ì¸í•˜ê³  ì‚¬ìš©
          docker buildx version || echo "Buildx not available, using regular docker build"

      - name: Log in to Docker Registry
        uses: docker/login-action@v2
        with:
          registry: ${{ env.REGISTRY }}
          username: ${{ secrets.REGISTRY_USERNAME }}
          password: ${{ secrets.REGISTRY_PASSWORD }}

      - name: Extract metadata
        id: meta
        uses: docker/metadata-action@v4
        with:
          images: ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}
          tags: |
            type=ref,event=branch
            type=sha,prefix={{branch}}-,format=short
            type=raw,value=latest,enable={{is_default_branch}}

      - name: Build and push Docker image
        id: build
        run: |
          # ë‹¨ì¼ ì•„í‚¤í…ì²˜ ë¹Œë“œ (self-hosted runner í™˜ê²½)
          docker build -t ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}:latest -f ./deployment/Dockerfile .
          docker push ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}:latest
          
          # SHA íƒœê·¸ë„ í‘¸ì‹œ
          SHORT_SHA=$(echo ${{ github.sha }} | cut -c1-7)
          docker tag ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}:latest ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}:main-${SHORT_SHA}
          docker push ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}:main-${SHORT_SHA}
          
          echo "digest=$(docker inspect --format='{{index .RepoDigests 0}}' ${{ env.REGISTRY }}/${{ env.IMAGE_NAME }}:latest | cut -d'@' -f2)" >> $GITHUB_OUTPUT

