name: Dependency Update

on:
  schedule:
    - cron: '0 3 * * 1'  # Run weekly on Monday at 3 AM
  workflow_dispatch:

permissions:
  contents: write
  pull-requests: write

jobs:
  update-dependencies:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
        with:
          token: ${{ secrets.GITHUB_TOKEN }}
          
      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.9'
          
      - name: Install pip-tools
        run: |
          python -m pip install --upgrade pip
          pip install pip-tools
          
      - name: Update Dependencies
        run: |
          echo "ðŸ“¦ Updating Python dependencies..."
          
          # Create requirements.in if it doesn't exist
          if [ ! -f requirements.in ]; then
            echo "# Core dependencies" > requirements.in
            grep -v '^#' requirements.txt | grep -v '^$' | cut -d'=' -f1 | cut -d'>' -f1 | cut -d'<' -f1 | cut -d'!' -f1 | cut -d'~' -f1 >> requirements.in
          fi
          
          # Compile updated requirements
          pip-compile --upgrade --resolver=backtracking requirements.in -o requirements.new.txt
          
          # Check if there are updates
          if diff -q requirements.txt requirements.new.txt > /dev/null; then
            echo "âœ… Dependencies are up to date"
            exit 0
          else
            echo "ðŸ”„ Dependencies updated"
            mv requirements.new.txt requirements.txt
          fi
          
      - name: Test Updated Dependencies
        run: |
          echo "ðŸ§ª Testing updated dependencies..."
          pip install -r requirements.txt
          
          # Basic import test
          python -c "
from src.core.app_compact import create_compact_app
from src.config.factory import get_config
print('âœ… Import test passed')
          "
          
      - name: Create Pull Request
        uses: peter-evans/create-pull-request@v5
        with:
          token: ${{ secrets.GITHUB_TOKEN }}
          commit-message: "chore: update dependencies"
          title: "ðŸ”„ Update Dependencies"
          body: |
            ## Automated Dependency Update
            
            This PR was automatically created to update project dependencies.
            
            ### Changes
            - Updated Python dependencies to latest compatible versions
            - All import tests passed
            
            ### Review Checklist
            - [ ] Review dependency changes for breaking updates
            - [ ] Verify no security vulnerabilities introduced
            - [ ] Test application functionality
            
            ### Dependency Diff
            ```diff
            $(diff -u requirements.txt requirements.new.txt || true)
            ```
            
            ---
            *This PR was auto-generated by the dependency update workflow*
          branch: deps/update-${{ github.run_number }}
          delete-branch: true
          labels: |
            dependencies
            automated