set -g set-clipboard on

# 입력 메서드 호환성
set -g terminal-features 'xterm*:clipboard:ccolour:cstyle:focus:title'


# 한글 입력 개선 설정
set -g default-terminal "xterm-256color"
set -ga terminal-overrides ",xterm-256color:Tc"

# UTF-8 설정
set -q -g status-utf8 on
setw -q -g utf8 on

# 입력 버퍼 크기 증가
set -g history-limit 10000

# 키 반복 지연 감소
set -sg escape-time 0
set -sg repeat-time 200

# 마우스/터치 입력 개선
set -g mouse on
set -g focus-events on

# 클립보드 설정
set -g set-clipboard on

# 입력 메서드 호환성
set -g terminal-features 'xterm*:clipboard:ccolour:cstyle:focus:title'


# Korean input fix
set -g default-terminal "screen-256color"
set -ga terminal-overrides ",*256col*:Tc"
set -g mouse on
set -sg escape-time 0

# ====== 터미널 응답성 최적화 설정 ======
# 히스토리 제한으로 메모리 절약
set-option -g history-limit 2000

# 버퍼 제한
set-option -g buffer-limit 20

# 상태바 업데이트 주기 늘리기 (CPU 절약)
set-option -g status-interval 30

# 자동 이름 변경 비활성화 (CPU 절약)  
set-option -g automatic-rename off
set-option -g allow-rename off

# 응답성 개선
set-option -g escape-time 10
set-option -g repeat-time 300

# 불필요한 모니터링 비활성화
set-window-option -g monitor-activity off
set-window-option -g monitor-bell off

# 메모리 효율적인 터미널 설정
set-option -g default-terminal "screen-256color"
set-option -g terminal-overrides "xterm*:Tc"

# 세션 관리 최적화
set-option -g detach-on-destroy off
set-option -g destroy-unattached off
