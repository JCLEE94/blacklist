# Production Environment Configuration
# 프로덕션 환경 전용 설정

# 기본 프로젝트 설정
PROJECT_NAME=blacklist
PROJECT_DESCRIPTION="Enterprise threat intelligence platform"
ENVIRONMENT=production

# 기본 도메인 설정 (실제 값으로 교체 필요)
BASE_DOMAIN=blacklist.jclee.me
REGISTRY_URL=registry.jclee.me
HELM_REPOSITORY=https://charts.jclee.me

# ArgoCD 설정
ARGOCD_SERVER=argo.jclee.me
ARGOCD_PROJECT=default
ARGOCD_AUTO_PRUNE=true
ARGOCD_SELF_HEAL=true
ARGOCD_RETRY_LIMIT=5
ARGOCD_HISTORY_LIMIT=10

# Kubernetes 설정
K8S_NAMESPACE=blacklist
K8S_SERVER=https://kubernetes.default.svc

# 애플리케이션 포트 설정
APP_PORT=8541
NODEPORT=32542

# Helm 설정
HELM_CHART_VERSION=*              # Use latest version (wildcard)
HELM_USERNAME=admin
HELM_PASSWORD=bingogo1
IMAGE_TAG=latest

# Ingress 설정
INGRESS_ENABLED=true
INGRESS_CLASS=traefik
CERT_ISSUER=letsencrypt-prod

# Kubernetes 설정
PRIMARY_K8S_CONTEXT=production-local
PRIMARY_K8S_SERVER=https://your-k8s-cluster.com:6443
SECONDARY_K8S_CONTEXT=production-remote
SECONDARY_K8S_SERVER=https://your-remote-cluster.com:6443
REMOTE_USER=deploy-user

# Git 설정
GIT_REPOSITORY=https://github.com/your-org/blacklist.git
GIT_USERNAME=deploy-bot
GIT_EMAIL=deploy@your-domain.com

# 레지스트리 인증 (실제 값으로 교체 필요)
REGISTRY_USERNAME=registry_user
REGISTRY_PASSWORD=registry_password_change_me

# 보안 설정 (실제 값으로 교체 필요 - Kubernetes Secret으로 관리 권장)
REGTECH_USERNAME=actual_regtech_user
REGTECH_PASSWORD=actual_regtech_password
SECUDIUM_USERNAME=actual_secudium_user
SECUDIUM_PASSWORD=actual_secudium_password
JWT_SECRET_KEY=production_jwt_secret_key_change_me
API_SECRET_KEY=production_api_secret_key_change_me

# Cloudflare 설정
ENABLE_CLOUDFLARED=true
CLOUDFLARE_TUNNEL_TOKEN=your_tunnel_token
CLOUDFLARE_HOSTNAME=blacklist.your-domain.com

# 로깅
LOG_LEVEL=INFO

# Resource Configuration
RESOURCE_REQUEST_MEMORY=256Mi
RESOURCE_REQUEST_CPU=100m
RESOURCE_LIMIT_MEMORY=512Mi
RESOURCE_LIMIT_CPU=500m

# Autoscaling Configuration
AUTOSCALING_ENABLED=true
AUTOSCALING_MIN_REPLICAS=2
AUTOSCALING_MAX_REPLICAS=10
AUTOSCALING_TARGET_CPU=70
AUTOSCALING_TARGET_MEMORY=80

# Timezone
TIMEZONE=Asia/Seoul