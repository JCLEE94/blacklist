{
  "dashboard": {
    "id": null,
    "uid": "blacklist-dashboard",
    "title": "Blacklist Application Dashboard",
    "tags": ["blacklist", "production"],
    "timezone": "browser",
    "refresh": "10s",
    "schemaVersion": 27,
    "version": 0,
    "panels": [
      {
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "id": 1,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(flask_http_request_total{app=\"blacklist\"}[5m])) by (method, status)",
            "legendFormat": "{{method}} - {{status}}"
          }
        ]
      },
      {
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "id": 2,
        "title": "Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(flask_http_request_duration_seconds_bucket{app=\"blacklist\"}[5m])) by (le))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(flask_http_request_duration_seconds_bucket{app=\"blacklist\"}[5m])) by (le))",
            "legendFormat": "99th percentile"
          }
        ]
      },
      {
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "id": 3,
        "title": "Pod CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{pod=~\"blacklist-.*\"}[5m])) by (pod)",
            "legendFormat": "{{pod}}"
          }
        ]
      },
      {
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "id": 4,
        "title": "Pod Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(container_memory_working_set_bytes{pod=~\"blacklist-.*\"}) by (pod)",
            "legendFormat": "{{pod}}"
          }
        ]
      },
      {
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
        "id": 5,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(flask_http_request_total{app=\"blacklist\",status=~\"5..\"}[5m]))",
            "legendFormat": "5xx errors"
          },
          {
            "expr": "sum(rate(flask_http_request_total{app=\"blacklist\",status=~\"4..\"}[5m]))",
            "legendFormat": "4xx errors"
          }
        ]
      },
      {
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
        "id": 6,
        "title": "Active IPs",
        "type": "stat",
        "targets": [
          {
            "expr": "blacklist_active_ips_total{app=\"blacklist\"}",
            "legendFormat": "Active IPs"
          }
        ]
      }
    ]
  }
}